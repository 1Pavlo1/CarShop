
@model CarShop.Models.ViewModel.ModelViewModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Add model of car</h2>
<form method="post" action="Create">
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Brands"></label>
        </div>
        <div class="col-4">
            <select asp-for="Model.BrandId" asp-items="Model.CSelectListItem(Model.Brands)" class="form-control"></select>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Model"></label>
        </div>
        <div class="col-4">
            <input asp-for="Model.Name" class="form-control" />
        </div>
    </div>
    <br />
    <div class="form-group">
        <input type="submit" class="btn btn-success" value="Add" />
        <a asp-action="Index" class="btn btn-primary">Back</a>
    </div>
</form>

