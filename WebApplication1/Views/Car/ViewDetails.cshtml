@model CarShop.Models.ViewModel.CarViewModel
@using CarShop.Extensions
@{
    ViewData["Title"] = "ViewDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Car details</h2>
<form>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Brands"></label>
        </div>
        <div class="col-4">
            <select disabled="disabled" asp-for="Car.BrandId" asp-items="Model.Brands.ToSelectListItem()" class="form-control" id="Brand"></select>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Models"></label>
        </div>
        <div class="col-4">
            <select disabled="disabled" asp-for="Car.ModelId" asp-items="Model.Models.ToSelectListItem()" class="form-control" id="Model"></select>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Car.Year"></label>
        </div>
        <div class="col-4">
            <input disabled="disabled" asp-for="Car.Year" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Car.Mileage"></label>
        </div>
        <div class="col-4">
            <input disabled="disabled" asp-for="Car.Mileage" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Car.Price"></label>
        </div>
        <div class="col-4">
            <input disabled="disabled" asp-for="Car.Price" class="form-control" />
        </div>
        <div class="col-1">
            <label asp-for="Car.Currency"></label>
        </div>
        <div class="col-4">
            <select  disabled="disabled" asp-for="Car.Currency" asp-items="Model.Currencies.ToSelectListItem()" class="form-control"></select>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Car.Description"></label>
        </div>
        <div class="col-4">
            <textarea disabled="disabled" asp-for="Car.Description" class="form-control"></textarea>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Car.SellerName"></label>
        </div>
        <div class="col-4">
            <input  disabled="disabled" asp-for="Car.SellerName" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Car.SellerPhone"></label>
        </div>
        <div class="col-4">
            <input disabled="disabled" asp-for="Car.SellerPhone" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Car.SellerEmail"></label>
        </div>
        <div class="col-4">
            <input disabled="disabled" asp-for="Car.SellerEmail" class="form-control" />
        </div>
    </div>
    <br />
    <div class="form-group">
        <a asp-action="Index" class="btn btn-primary">Back</a>
    </div>
</form>

