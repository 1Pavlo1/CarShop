
@model IEnumerable<CarShop.Models.Model>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />

<div class="row">
    <div class="col-6">
        <h2 class="text-info">Brands of cars</h2>
    </div>
    <div class="col-6 text-right">
        <a class="btn btn-info" asp-action="Create"><i class="fas fa-car"></i> &nbsp; Add new model</a>
    </div>
    <br />
    <div class="col-12">
        <table class="table table-striped border">
            <tr class="table-info">
                <th>
                    @Html.DisplayNameFor(b => b.Brand)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.Name)
                </th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(b => item.Brand.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.Name)
                    </td>
                    <td class="text-right">
                        <div class="btn-group" role="group">
                            <button type="button" class="btn btn-primary" href="@Url.Action("Edit")/@item.Id"><i class="fas fa-edit"></i></button>
                            <form method="post" action="Delete">
                                <button onclick="if (!confirm('Are you really want to delete?')){ return false}" type="submit" class="btn btn-danger align-self-center" asp-action="Delete" asp-route-id="@item.Id"><i class="far fa-trash-alt"></i></button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </table>
    </div>
    </div>