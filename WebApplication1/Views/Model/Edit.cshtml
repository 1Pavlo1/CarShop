
@model CarShop.Models.ViewModel.ModelViewModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Edit model of car</h2>
<form method="post" action="Edit">
    <input hidden asp-for="Model.Id" />
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Brands"></label>
        </div>
        <div class="col-4">
            <select asp-for="Model.BrandId" asp-items="Model.CSelectListItem(Model.Brands)" class="form-control"></select>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Model"></label>
        </div>
        <div class="col-4">
            <input asp-for="Model.Name" class="form-control" />
        </div>
    </div>
    <br />
    <div class="form-group">
        <input type="submit" class="btn btn-secondary" value="Update" />
        <a asp-action="Index" class="btn btn-primary">Back</a>
    </div>
</form>
